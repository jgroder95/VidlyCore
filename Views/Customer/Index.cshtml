@model IEnumerable<VidlyCore.Models.Customer>
<html>
    <body>
        <h1>Customer Index</h1>

        @Html.ActionLink("New Customer", "New", "Customer", null, new { @class = "btn btn-primary" })

        <table id="customers" class="table table-bordered table-hover" style="margin-top: 1vh">
            <thead>
                <tr>
                    <th>Customer list</th>
                    <th>Membership Type</th>
                    <th>Delete Customer</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(customer.Name, "Edit", "Customer", new { id = customer.Id }, null)</td>
                            <td>@customer.MembershipType.Name</td>
                            <td>@Html.ActionLink("Delete", "Delete", "Customer", new { id = customer.Id }, null)</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">
                            <p style="text-align:center; margin-bottom:0vh">No customers exist in our database</p>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </body>
</html>