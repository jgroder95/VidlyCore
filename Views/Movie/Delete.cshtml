@model VidlyCore.ViewModels.MovieViewModel
<html>
    <body>
        <h2>Delete Movie</h2>
        <b style="color:red;">Are you sure you want to delete this customer?</b>
        @using (Html.BeginForm("Delete", "Movie"))
        {
            <div class="form-group">
                @Html.LabelFor(c => c.Movie.Name)
                @Html.TextBoxFor(c => c.Movie.Name, new { @class = "form-control", @readonly = true })
                @Html.ValidationMessageFor(c => c.Movie.Name)
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Movie.GenreTypeId)
                @Html.DropDownListFor(c => c.Movie.GenreTypeId, new SelectList(Model.GenreType, "Id", "GenreName"), "please select a genre type", new { @class = "form-control", @readonly = true })
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Movie.ReleaseDate)
                @Html.TextBoxFor(c => c.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control", @readonly = true })
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Movie.DateAdded)
                @Html.TextBoxFor(c => c.Movie.DateAdded, "{0:d MMM yyyy}", new { @class = "form-control", @readonly = true })
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Movie.NumberOfMoviesInStock)
                @Html.TextBoxFor(c => c.Movie.NumberOfMoviesInStock, new { @class = "form-control", @readonly = true })
            </div>

            @Html.HiddenFor(c => c.Movie.Id)
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-danger" style="margin-top: 1vh">Delete</button>
        }
    </body>
</html>