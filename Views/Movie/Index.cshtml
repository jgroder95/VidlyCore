@model IEnumerable<VidlyCore.Models.Movie>
<html>
    <body>
        <h1>Movie Index</h1>

        @Html.ActionLink("New Movie", "New", "Movie", null, new { @class = "btn btn-primary" })

        <table id="movies" class="table table-bordered table-hover" style="margin-top: 1vh">
            <thead>
                <tr>
                    <th>Movie list</th>
                    <th>Genre Type</th>
                    <th>Delete Movie</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(movie.Name, "Edit", "Movie", new { id = movie.Id }, null)</td>
                            <td>@movie.GenreType.GenreName</td>
                            <td>@Html.ActionLink("Delete", "Delete", "Movie", new { id = movie.Id }, null)</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">
                            <p style="text-align:center; margin-bottom:0vh">No movies exist in our database</p>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </body>
</html>